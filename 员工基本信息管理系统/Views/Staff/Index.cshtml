@model List<Service.ViewModel.StaffModel>
@{
    ViewBag.Title = "Index";
}
<h2>员工信息</h2>
<hr />
<div id="div">
    @if (Model != null)
    {
        <table style="border:dashed 1px" class="table">
            <tr class="active">
                <th>姓名</th>
                <th>手机号</th>
                <th>身份证号</th>
                <th>年龄</th>
                <th>性别</th>
                <th>毕业院校</th>
                <th>家庭住址</th>
                <th>兴趣爱好</th>
                <th >全部删除</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr class="warning" style="border:dashed 1px">
                    <td>@item.Name</td>
                    <td>@item.cellPhoneNumber</td>
                    <td>@item.IDNumber</td>
                    <td>@item.Age</td>
                    <td>@item.Gender</td>
                    <td>@item.GraduateInstitutions</td>
                    <td>@item.HomeAddress</td>
                    <td>@item.HobbiesAndInterests</td>
                    <td>   <button id="delete">删除</button> </td>
                </tr>
            }

        </table>

    }@*else nothing*@
</div>

<a class="btn btn-default" href="Staff/Add" role="button">添加新员工</a>
<a class="btn btn-default" href="Staff/Delete" role="button">删除员工信息</a>
<a class="btn btn-default" href="Staff/Change" role="button">修改员工信息</a>

